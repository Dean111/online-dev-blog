<%- include('admin/header') %>
<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
              个人信息管理 <small>网站个人名片设置</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">UI Elements </a></li>
            <li class="active">Data</li>
        </ol>
        <% if (success) { %>  
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>

        <% if (error) { %>
          <div class="alert alert-success" role="alert"><%= error %></div>
        <% } %>
    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="card-title">
                            <div class="title">前台名片设置</div>
                        </div>
                    </div>
                    <div id="show" class="panel-body">
                        <form>
                            <input type="hidden" id="infoId"  name="infoId" class="form-control" value='<% if(typeof info!=='undefined'){ %><%- info._id %><% }%>' id="exampleInputEmail1" >
                            <div class="form-group">
                                <label for="exampleInputEmail1">网名</label>
                                <input type="text"  name="nickname" class="form-control" value='<% if(typeof info!=='undefined'){ %><%- info.nickname %><% }%>' id="exampleInputEmail1" placeholder="网名">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" name="email"  class="form-control" value='<% if(typeof info!=='undefined'){ %><%- info.email %><% } %>' id="exampleInputEmail1" placeholder="Enter email">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">职业</label>
                                <input type="text" name="job" class="form-control" id="exampleInputPassword1" value='<% if(typeof info!=='undefined'){ %><%- info.job %><% } %>' placeholder="职业">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">联系方式</label>
                                <input type="text" name="contact" class="form-control" id="exampleInputPassword1" value='<% if(typeof info!=='undefined'){ %><%- info.contact %><% } %>' placeholder="联系方式">
                            </div>
                            <button id="submit" class="btn btn-default">提交</button>
                            <button type="reset" class="btn btn-default">重置</button>
                            <button id="modified" class="btn btn-default">修改</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <footer>
            <p>Copyright &copy; 2016.Company name All rights reserved.<a target="_blank" href="http://sc.chinaz.com/moban/">&#x7F51;&#x9875;&#x6A21;&#x677F;</a></p>
        </footer>
    </div>
    <!-- /. PAGE INNER  -->
</div>
<script type="text/javascript" src="/js/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
  $(function(){
      $("#submit").click(function(){
          $('form').attr('action','/admin/personInfo');
          $("form").attr("method","POST");
          $('#form0').submit();
      });
      $("#modified").click(function(){
          $("form").attr("method","POST");
          $("form").attr("action","/admin/edit");
          //document.getElmentById('show').style.display="none";//.setAttribute('action','/admin/edit');
          $('#form0').submit();
      });
  });
</script>
<%- include('admin/footer') %>
